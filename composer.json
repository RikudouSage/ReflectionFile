{
  "name": "rikudou/reflection-file",
  "description": "Reflection file implementation",
  "minimum-stability": "stable",
  "license": "WTFPL",
  "authors": [
    {
      "name": "Dominik Chrástecký",
      "email": "dominik@chrastecky.cz"
    }
  ],
  "autoload": {
    "psr-4": {
      "Rikudou\\": "src/"
    },
    "files": [
      "globals.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Rikudou\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.14",
    "phpstan/phpstan": "^0.11.1",
    "phpunit/phpunit": "^8.0"
  },
  "scripts": {
    "fixer": "php-cs-fixer fix src --verbose",
    "phpstan": "phpstan analyse --level=7 src"
  },
  "require": {
    "php": "^7.1"
  }
}
